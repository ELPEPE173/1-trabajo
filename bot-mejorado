import discord
from discord.ext import commands
import random
# La variable intents almacena los privilegios del bot
intents = discord.Intents.default()

# Activar el privilegio de lectura de mensajes
intents.message_content = True
# Crear un bot en la variable cliente y transferirle los privilegios
bot = commands.Bot(command_prefix='$', intents=intents)

@bot.event
async def on_ready():
    print(f'Hemos iniciado sesiÃ³n como {bot.user}')


@bot.command(name='hello')
async def hello(ctx):
    await ctx.send(f"Hi!, {bot.user}!")

@bot.command(name='bye')
async def bye(ctx):
    await ctx.send("\U0001f642")

@bot.command(name='ping')
async def ping(ctx):
    await ctx.send('Pong!')

@bot.command()
async def joined(ctx, member: discord.Member):
    """Dice cuÃ¡ndo un miembro se uniÃ³."""
    await ctx.send(f'{member.name} se uniÃ³ el {discord.utils.format_dt(member.joined_at)}')

@bot.command(name='say')
async def say(ctx, *, message: str):
    """Repite lo que el usuario diga."""
    await ctx.send(f'Â¡{message}! ğŸ—£ï¸ Â¡Lo dije!')

# Comando para iniciar el juego de adivinanzas
@bot.command(name='start_guess')
async def start_guess(ctx):
    bot.correct_number = random.randint(1, 100)
    await ctx.send('He generado un nÃºmero entre 1 y 100. Â¡Adivina cuÃ¡l es! Usa el comando $guess seguido de tu nÃºmero.')

# Comando para adivinar el nÃºmero
@bot.command(name='guess')
async def guess(ctx, number: int):
    if not hasattr(bot, 'correct_number'):
        await ctx.send('Primero inicia el juego usando !start_guess.')
    elif number == bot.correct_number:
        await ctx.send(f'Â¡Correcto! El nÃºmero era {bot.correct_number}. Puedes iniciar un nuevo juego con $start_guess.')
        del bot.correct_number
    else:
        hint = 'mayor' if number < bot.correct_number else 'menor'
        await ctx.send(f'Incorrecto. El nÃºmero es {hint}.')

    
TOKEN = ''
bot.run(TOKEN)
